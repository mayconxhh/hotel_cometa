@import 'nib'


// iteracion
fonts = 'Bebas-Neue' 'Socialico'
for font  in fonts
	@font-face
		font-family font
		font-style normal
		font-weight normal
		src url('../font/'+font+'.eot')
		src url('../font/'+font+'.otf'), url('../font/'+font+'.ttf')
	
// mixin
mixin-figureHeader(grade, color = red)
	content ''
	position absolute
	z-index -1
	top 0
	height 100%
	width 50%
	background-color color
	transform skew(0deg, grade)

// variables
caligrafi = 'Calligraffitti', cursive
azul = #3e87cc
social = 'Socialico'

.fullScreen
	width 100%
	height 100%
	padding 0
	margin 0
	background-attachment fixed
	
.buffet
	position relative
	.image-food
		z-index 20
		right 0
		position absolute
		width 80px
		height 80px
		border-radius 80px
		transition all 1s ease-in
		background-size 100%
		background-position 50%
		cursor pointer
	.viewport
		z-index 1
		left 0
		top 0
		width 100%
		height 100%
		border-radius 0
		transition all 1s ease-in
		cursor auto
		
.centerCircle
	display none

.contacto
	display inherit
	background-image url('../img/DSCN1218.jpg')
	background-size cover
	font-family caligrafi
	text-align center
	height auto
	padding-bottom 2em
	h2
		color #f7f7f7
		font-size 2.5rem
		text-shadow 0px 0px 10px rgba(0, 0, 0, .8)
	p
		font-size 1.5em
		color #222
		text-shadow 0px 0px 2px #000
		background-color rgba(250,250,250,0.7)
		margin 0
	h3
		font-size 2em
		line-height 1em
		background-color #f7f7f7
		color azul
		padding .3em
	.social
		font-family social
		font-size 4em;
		transition all .4s
		cursor pointer
		color white
		text-shadow 0px 0px 10px rgba(0, 0, 0, .8)
		a
			text-decoration none
			color inherit
			&:visited
				color inherit
			&:hover
				color inherit
		&:hover
			color azul
			text-shadow 0px 0px 2px #000
	.maps
		width 100%
		height 400px
		border 5px solid #eee
		box-shadow 0px 0px 15px rgba(0, 0, 0, .8) 
		
		
.cuartos 
	position relative
	height auto

.costos
	font-family caligrafi
	background-image url('../img/DSCN1332.jpg')
	background-size cover
	height auto
	.precio
		width 90%
		// margin-left 3.5%
		display block
		margin .5em auto
		background-color #f7f7f7
		vertical-align top
		// padding 2em .4%
		text-align center
		// padding-top 0
		border 1px solid #ccc
		h3
			font-size 2em
			color azul
		.costo 
			background-color azul
			color #fff 
			width 50%
			font-size 1.5em
			padding .5em
			margin 0 auto
		.ver-mas
			margin-top 30px
			display block
			cursor pointer
	
html, body
	margin 0
	padding 0
	height 100%

	
.half
	width 100%
.halfRooms
	height 100%
	img
